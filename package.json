{
    "name": "zodive",
    "version": "0.0.3",
    "private": true,
    "packageManager": "pnpm@8.1.0",
    "workspaces": [
        "apps/*",
        "packages/*",
        "packages/config/*"
    ],
    "scripts": {
        "web": "turbo run dev --filter @zodive/web",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "bump": "node ./scripts/bump.js"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.1.1",
        "eslint-config-custom": "workspace:*",
        "prettier": "^2.8.7",
        "turbo": "^1.9.9"
    }
}
