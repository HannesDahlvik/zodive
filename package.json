{
    "name": "zodive",
    "version": "0.1.0",
    "private": true,
    "packageManager": "pnpm@8.1.0",
    "workspaces": [
        "apps/*",
        "packages/*",
        "packages/config/*"
    ],
    "scripts": {
        "web": "pnpm --filter @zodive/web --",
        "api": "pnpm --filter @zodive/api --",
        "auth": "pnpm --filter @zodive/auth --",
        "db": "pnpm --filter @zodive/db --",
        "ui": "pnpm --filter @zodive/ui --",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "bump": "node ./scripts/bump.js"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.1.1",
        "eslint-config-custom": "workspace:*",
        "prettier": "^2.8.7",
        "turbo": "^1.10.4"
    }
}
